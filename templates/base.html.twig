{#  ***MAIN TEMPLATE*** #}

<!DOCTYPE html>
<html>
    {% block head %}
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="{{ root }}/assets/css/reset.css" rel="stylesheet" type="text/css">

        {% block stylesheets %}
        <link href="{{ root }}/assets/css/styles.css" rel="stylesheet" type="text/css">
        {% endblock %}
        <title>{% block title %}{{pageTitle}}{% endblock %}</title>
    </head>
    {% endblock %}

    {% block body %}
    <body>
{# --------------------------- HEADER CONTENT------------------------------- #}
        {% block header %}
            {% include 'header.html.twig' %}
        {% endblock %}
{# --------------------------- MAIN CONTENT--------------------------------- #}
        <main>
        {% block content %}
            
        {% endblock %}        
        </main>
{# --------------------------- FOOTER CONTENT------------------------------- #}        
        {% block footer %}
            {% include 'footer.html.twig' %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ root }}/assets/javascript/script.js"></script>
            <script src="{{ root }}/assets/javascript/navbar.js"></script>
            <div id="topbtncontainer">
                <button onclick="topFunction()" id="topbtn" class="topbtn" title="Scrowll to Top">&#9001;</button>
            </div>
            
        {% endblock %}
    </body>
    {% endblock %}
</html>