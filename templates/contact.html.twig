{% extends "welcome.html.twig" %}

{% block content %}

    {% for contact in _context %}
        <h2 class="main__section__title main__section__title--contact">{{contact.contacts_name}}</h2>
    
        {% block informations %}

        {% embed 'informations.html.twig' %}
                
            {% block infotemplate %}
                <div class="contact">
                    <ul class="contact__infos">
                        <li class="contact__info__item"><span class="bold">Contact:&nbsp;</span>{{contact.contacts_name}}</li>
                        <li class="contact__info__item"><span class="bold">Phone:&nbsp;</span>{{contact.contacts_phone}}</li>
                        <li class="contact__info__item"><span class="bold">Mail:&nbsp;</span>{{contact.email}}</li>
                        <li class="contact__info__item"><span class="bold">Company:&nbsp;</span>{{contact.companies_name}}</li>
                    </ul>
                </div>
            {% endblock %}

                {% block contactpic %}
                    <div class="contact__pic">
                        {# <img src=""> #}
                    </div>
                {% endblock %}
                
            {% endembed %}

        {% endblock %}

    {% endfor %}
    

{% endblock %}